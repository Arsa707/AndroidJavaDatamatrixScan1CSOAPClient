<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <TextView
            android:id="@+id/textLogo"
            android:layout_gravity="top|center"
            android:textAlignment="center"
            android:autoSizeTextType="uniform"
            android:text="Gimex Scanner"
            android:fontFamily="sans-serif-black"

            android:background="@color/cadmium_violet"
            android:textColor="#BEE7D2"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            tools:context=".MainActivity"
            android:layout_weight="10">

        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                tools:context=".MainActivity"
                android:layout_weight="1">
            <TextView
                    android:text="1"
                    android:id="@+id/doc_number"
                    android:layout_gravity="top|center"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

            <TextView
                    android:text="1"
                    android:id="@+id/doc_date"
                    android:layout_gravity="top|center"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                tools:context=".MainActivity"
                android:layout_weight="1">
            <TextView
                    android:text="1"
                    android:id="@+id/process_number"
                    android:layout_gravity="top|center"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            <TextView
                    android:text="1"
                    android:id="@+id/process_data"
                    android:layout_gravity="top|center"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
        </LinearLayout>
        <TextView
                android:text="1"
                android:id="@+id/organization"
                android:layout_gravity="top|center"
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        <TextView
                android:text="1"
                android:id="@+id/contragent"
                android:layout_gravity="top|center"
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                tools:context=".MainActivity"
                android:layout_weight="2">
            <TextView
                    android:text="1"
                    android:id="@+id/datamatrix_sum"
                    android:layout_gravity="top|center"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            <TextView
                    android:text="1"
                    android:id="@+id/datamatrix_scanned_now"
                    android:layout_gravity="top|center"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/cadmium_violet"
            android:layout_weight="1">
    </TextView>

    <Button
            android:text="Отсканировать"
            android:autoSizeTextType="uniform"
            android:id="@+id/start_scan"
            android:contentDescription="@string/app_name"
            android:backgroundTint="@color/cadmium_violet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <Button
            android:text="Снять блокировку процесса"
            android:autoSizeTextType="uniform"
            android:id="@+id/unblock"
            android:contentDescription="@string/app_name"
            android:backgroundTint="@color/cadmium_violet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <Button
            android:text="Завершить сканирование"
            android:autoSizeTextType="uniform"
            android:id="@+id/stop_scan"
            android:contentDescription="@string/app_name"
            android:backgroundTint="@color/cadmium_violet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <Button
            android:text="Отправить штрихкоды"
            android:autoSizeTextType="uniform"
            android:id="@+id/send_Datamatrix"
            android:backgroundTint="@color/cadmium_violet"
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
</LinearLayout>