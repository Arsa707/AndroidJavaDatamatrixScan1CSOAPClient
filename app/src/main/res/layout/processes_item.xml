<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.androidjavadatamatrixscan1csoapclient.MainActivity"
        android:orientation="horizontal"
        android:id="@+id/item_processes"
        android:background="@color/white"

>
    <TextView
            android:id="@+id/processes_item_number"
            android:layout_gravity="top|center"
            android:textSize="20sp"
            android:gravity="center"
            tools:text="0000001"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:background="@drawable/border_bottom"
    />
    <TextView
            android:id="@+id/processes_item_date"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:textSize="20sp"
            tools:text="21.09.1997"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:background="@drawable/border_bottom"/>
    <TextView
            android:id="@+id/processes_item_block"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:textSize="20sp"
            tools:text="+"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:background="@drawable/border_bottom"/>
</LinearLayout>